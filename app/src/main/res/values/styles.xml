<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name = "CleanRecyclerView" parent = "NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <!-- ****************GUIDELINES COMMON *******************-->
    <style name="guideLineVerticalStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="guideLineVerticalEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="guideLineVerticalTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="guideLineVerticalBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- ****************CARD LIST SETUP STYLES *******************-->
    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#aacbb4</item>
    </style>

    <style name="cardListButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/Primario_01_SMM_Purple</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cardListTitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cardListTitle2">
        <item name="android:layout_width">299dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardListTitle3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardListTitle4">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Primario_01_SMM_Purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardListTitle5">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Primario_01_SMM_Purple</item>
    </style>

    <style name="cardListTitle6">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/Primario_01_SMM_Purple</item>
    </style>

    <!-- ****************CARD LIST ITEMS SETUP STYLES *******************-->
    <style name="cardListItemImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:contentDescription">@string/cardListAvail_ItemName</item>
    </style>

    <style name="cardListItemCardName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="cardListItemCardNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="cardListItemSwtchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="cardListItemHomeTaskName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="cardListItemHomeTaskDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="cardListItemHomeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="backgroundTint">#ffffff</item>
        <item name="android:minHeight">48dp</item>
    </style>



</resources>