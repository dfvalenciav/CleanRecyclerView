<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardSetup.presentation.cardListFinishRegister.CardListFinishRegisterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        app:layout_constraintGuide_percent="0.05"
        style="@style/guideLineVerticalStart" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        app:layout_constraintGuide_percent="0.95"
        style="@style/guideLineVerticalEnd" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_card_list_finish_register_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_favicon_copy_4" />
z
    <TextView
        android:id="@+id/tv_card_list_finish_register_smm"
        style="@style/cardListTitle6"
        android:layout_marginStart="8dp"
        android:text="@string/cardListFinishReg_Title1"
        app:layout_constraintStart_toEndOf="@+id/img_card_list_finish_register_icon"
        app:layout_constraintTop_toTopOf="@+id/img_card_list_finish_register_icon" />

    <TextView
        android:id="@+id/tv_card_list_finish_register_title"
        style="@style/cardListTitle2"
        android:layout_marginTop="30dp"
        android:text="@string/cardListFinishReg_Title2"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/img_card_list_finish_register_icon" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_card_list_finish_register_continue"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_list_finish_register_title"
        app:layout_constraintVertical_bias="0.0">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_card_list_finish_register_description"
        style="@style/cardListTitle2"
        android:layout_width="match_parent"
        android:text="@string/cardListFinishReg_Title3"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/tv_card_list_finish_register_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_list_finish_register_title" />

    <TextView
        android:id="@+id/tv_card_list_finish_register_comment"
        android:layout_width="match_parent"
        android:text="@string/cardListFinishReg_Title4"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_list_finish_register_description"
        style="@style/cardListTitle3" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_card_list_finish_register_continue"
        style="@style/cardListButtonStyle"
        android:text="Ir a Inicio"
        android:textAlignment="center"
        android:textAppearance="@style/TextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart" />

</androidx.constraintlayout.widget.ConstraintLayout>