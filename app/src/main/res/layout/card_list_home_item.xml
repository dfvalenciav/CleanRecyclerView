<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_card_list_home_item_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_tarjeta_actividad"
        style="@style/cardListItemImage" />

    <TextView
        android:id="@+id/tv_card_list_home_item_title"
        style="@style/cardListItemHomeTaskName"
        android:layout_marginStart="12dp"
        android:text="@string/cardListHome_itemName"
        app:layout_constraintStart_toEndOf="@+id/img_card_list_home_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_list_home_item_description"
        style="@style/cardListItemHomeTaskDescription"
        android:layout_marginTop="4dp"
        android:text="@string/cardListHome_itemDescription"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_card_list_home_item_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_list_home_item_title" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/swt_card_list_home_item_card_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_card_list_home_item_title"
        style="@style/cardListItemHomeButton"
        android:src="@drawable/ic_icono_arrow_right"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>